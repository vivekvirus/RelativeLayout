<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#0ff">

    <View
        android:id="@+id/yellowbox"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:background="#ff0" />

    <View
        android:id="@+id/redbox"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_alignParentRight="true"


        android:background="#f00" />

    <View
        android:id="@+id/greenbox"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_alignParentBottom="true"
        android:background="#0f0" />


    <View
        android:id="@+id/pinkbox"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:background="#f0f"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_toRightOf="@+id/greenbox"
        android:layout_toLeftOf="@+id/pinkbox"
        android:layout_below="@+id/yellowbox"
        android:layout_above="@+id/greenbox"

        >


    </LinearLayout>



</RelativeLayout>